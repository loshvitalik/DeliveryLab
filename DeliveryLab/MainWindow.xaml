<Window x:Name="mainWindow" x:Class="DeliveryLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliveryLab"
        mc:Ignorable="d"
        Title="Delivery Lab — Администратор" Height="600" MinHeight="480" Width="900" MinWidth="640" ResizeMode="CanResize" Closed="UnloadAppFromEvent" Background="#FFEFEFF4" WindowStyle="ThreeDBorderWindow">
    <Window.Resources>
        <!-- Пример картинки на всякий -->
        <Image x:Key="receiverOn" Source="Images/on.png" Height="31" Width="51"/>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="TextBlock.FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFF6F6F7"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#FFC8C7CC"/>
        </Style>
        <Style x:Key="Body_Content_DataGrid_Centering"
        TargetType="{x:Type DataGridCell}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Padding="2" Width="auto" VerticalAlignment="Center" Background="#FFEFEFF4" FontSize="14">
            <MenuItem Header="Настройки">
                <MenuItem x:Name="autoRefreshButton" Header="Автообновление" Click="ToggleAutoRefresh" IsCheckable="True" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="Цвет фона..." IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Помощь" Click="ShowHelpWindow"/>
                <MenuItem Header="О программе" Click="ShowAboutWindow"/>
            </MenuItem>
            <MenuItem Header="Выход">
                <MenuItem Header="Выход" Click="UnloadAppFromEvent"/>
            </MenuItem>
        </Menu>

        <Label x:Name="title" Content="Меню" Grid.Column="2" Grid.Row="2" Background="#FFF6F6F7" FontWeight="SemiBold" FontSize="17" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="loginButton" Content="Войти" Click="ShowLoginWindow" Grid.Column="0" Grid.Row="2" Background="#FFF6F6F7" BorderBrush="{x:Null}" Foreground="#FFFF3B30" FontWeight="SemiBold" FontSize="17"/>

        <Button x:Name="showMenu" Content="Меню" Click="ShowMenu" Grid.Column="0" Grid.Row="4" Margin="2,2,2,0" Height="45" Background="White" BorderBrush="#FFC8C7CC" Foreground="#FF007AFF" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="showRestaurants" Content="Рестораны" Click="ShowRestaurants" Grid.Column="0" Grid.Row="4" Margin="2,49,2,0" Height="45" Background="White" BorderBrush="#FFC8C7CC" Foreground="#FF007AFF" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="showOrders" Content="Заказы" Click="ShowOrders" Grid.Column="0" Grid.Row="4" Margin="2,96,2,0" Height="45" Background="White" BorderBrush="#FFC8C7CC" Foreground="#FF007AFF" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="addDishButton" Content="Добавить блюдо" Click="AddNewDish" Grid.Column="0" Grid.Row="4" Margin="2,143,2,0" Height="45" Background="White" BorderBrush="#FFC8C7CC" Foreground="Gray" FontSize="16" VerticalAlignment="Top"/>

        <DataGrid x:Name="table" Grid.Column="2" Grid.Row="4" Margin="2" IsReadOnly="True" AutoGenerateColumns="False" CellStyle="{StaticResource Body_Content_DataGrid_Centering}" Block.TextAlignment="Center" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" AlternationCount="1" AlternatingRowBackground="#BFF6F6F7" MinRowHeight="44" RowHeight="44" HorizontalGridLinesBrush="#FFC8C7CC" FontSize="14" VerticalContentAlignment="Center" VerticalGridLinesBrush="#FFB9B9B9" BorderBrush="#FFC8C7CC" Background="White" GridLinesVisibility="All" HeadersVisibility="Column" HorizontalScrollBarVisibility="Disabled">
            <DataGrid.Columns>
                <DataGridTextColumn Width="75*" HeaderStyle="{StaticResource CenterGridHeaderStyle}" Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Название"/>
                <DataGridTextColumn Width="25*" HeaderStyle="{StaticResource CenterGridHeaderStyle}" Binding="{Binding Price}" ClipboardContentBinding="{x:Null}" Header="Стоимость"/>
            </DataGrid.Columns>
        </DataGrid>

        <Rectangle x:Name="horizLine1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Fill="#FFA7A7AB"/>
        <Rectangle x:Name="horizLine2" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Fill="#FFA7A7AB"/>
        <Rectangle x:Name="vertLine" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" Fill="#FF8E8E93"/>
    </Grid>
</Window>
